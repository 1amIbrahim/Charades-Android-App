<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/backOrange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categories">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textColor="@color/white"
            android:fontFamily="@font/adlam_display"
            android:textSize="48sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView"
            android:padding="6dp"
            android:layout_centerHorizontal="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/animal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/animals2"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/celeb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/celebrities"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/Movies"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/movies"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/food"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/food"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/books"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/animals1"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/festivals"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/food"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/places"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/places"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/sports"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/sports"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/game"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/games"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/tvshow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/food"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/songs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/animals1"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardElevation="4dp"
                        android:layout_margin="8dp">

                        <ImageButton
                            android:id="@+id/hobbie"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@drawable/food"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

                <!-- Repeat similar TableRow blocks for other categories -->

            </TableLayout>
        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
