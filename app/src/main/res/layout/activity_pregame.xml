<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backOrange"
    android:backgroundTint="@color/backOrange"
    tools:context=".pregame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/startbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="56dp"
            android:backgroundTint="#98CB00"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:translationZ="16dp"
            android:layout_below="@id/cardView4"
            android:layout_alignStart="@id/cardView4"
            android:layout_marginVertical="50dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="300dp"
            android:layout_height="400dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/preimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:contentDescription="Animal"
                android:scaleType="centerCrop"
                android:src="@drawable/animals" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="56dp"
            android:backgroundTint="#98CB00"
            android:elevation="16dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:translationZ="16dp"
            android:layout_below="@id/cardView4"
            android:layout_alignEnd="@id/cardView4"
            android:layout_marginVertical="50dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            android:layout_below="@id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:backgroundTint="@android:color/holo_green_light">

                <TextView
                    android:id="@+id/timetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/textView4"
                    android:text="2:00"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/minus"
                    android:text="Set Time  "
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"

                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#98CB00"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/timetv"
                    android:backgroundTint="#98CB00"
                    android:text="+"
                    android:textSize="24sp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>