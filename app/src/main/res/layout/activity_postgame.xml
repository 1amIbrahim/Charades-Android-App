<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backOrange"
    android:backgroundTint="@color/backOrange"
    tools:context=".postgame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/backbtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#98CB00"
            android:elevation="16dp"
            android:text="Categories"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:translationZ="16dp"
            android:layout_below="@id/restart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#98CB00"
            android:elevation="16dp"
            android:text="Play Again"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:translationZ="16dp"
            android:layout_below="@id/scoretext"
            android:layout_centerHorizontal="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/precard"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/darkOrange"
            android:padding="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:textAlignment="center" />
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/scoretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adlam_display"
            android:text="You Got Cards"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/precard"
            android:layout_marginVertical="30dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>